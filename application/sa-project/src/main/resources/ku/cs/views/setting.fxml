<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controller.SettingController">

    <!-- Header Section: "Your Account" and "Back" Button -->
    <HBox alignment="CENTER" spacing="10" VBox.vgrow="NEVER">
        <Label style="-fx-font-size: 24px; -fx-text-fill: #000000;" text="Your Account" HBox.hgrow="ALWAYS" />
      <Pane HBox.hgrow="ALWAYS" />
        <Button onAction="#OnBackToHome" style="-fx-font-weight: bold; -fx-font-size: 18;" styleClass="button-green" stylesheets="@../themes/default.css" text="Back" HBox.hgrow="ALWAYS">
         <font>
            <Font size="18.0" />
         </font></Button>
    </HBox>

    <!-- Main Content Section -->
    <HBox alignment="CENTER" spacing="50" VBox.vgrow="ALWAYS">

        <!-- Left VBox: Name, Phone Number, and Email -->
        <VBox fx:id="vBox" alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS" />

        <!-- Right VBox: Profile Image, Change Profile Image, Logout, Change Email, Change Password -->
        <VBox alignment="CENTER_RIGHT" spacing="15" HBox.hgrow="ALWAYS">
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                  <ImageView fx:id="profileImage" fitHeight="100" fitWidth="100" style="-fx-border-color: #008080;" />
            </children>
         </HBox>
            <Button onAction="#OnChangeProfileImage" style="-fx-font-weight: bold; -fx-font-size: 18;" styleClass="button-green" stylesheets="@../themes/default.css" text="Change Profile Image" VBox.vgrow="ALWAYS">
            <font>
               <Font size="18.0" />
            </font></Button>
        </VBox>

    </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <children>
         <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         <VBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
            <children>
                  <Button onAction="#OnApply" style="-fx-font-weight: bold; -fx-font-size: 18;" styleClass="button-green" stylesheets="@../themes/default.css" text="Apply">
                  <font>
                     <Font size="18.0" />
                  </font></Button>

                        <Button onAction="#OnLogOut" style="-fx-font-weight: bold; -fx-font-size: 18;" styleClass="button-red" stylesheets="@../themes/default.css" text="Logout">
                  <font>
                     <Font size="18.0" />
                  </font></Button>
                  <Button onAction="#OnChangePassword" style="-fx-font-weight: bold; -fx-font-size: 18;" styleClass="button-green" stylesheets="@../themes/default.css" text="Change Password" VBox.vgrow="ALWAYS">
                  <font>
                     <Font size="18.0" />
                  </font></Button>
            </children>
         </VBox>
      </children>
   </HBox>
</VBox>
