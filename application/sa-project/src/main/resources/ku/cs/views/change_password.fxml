<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controller.ChangePasswordController">
    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Change Password" />
      <Pane HBox.hgrow="ALWAYS" />
        <Button onAction="#OnBackToHome" style="-fx-font-size: 16; -fx-font-weight: bold;" styleClass="button-green" stylesheets="@../themes/default.css" text="Back" />
    </HBox>

    <VBox fx:id="vBox" alignment="CENTER_LEFT" spacing="20" VBox.vgrow="ALWAYS">
      <padding>
         <Insets left="100.0" right="100.0" />
      </padding>
   </VBox>

    <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
        <Button alignment="TOP_CENTER" contentDisplay="CENTER" onAction="#OnChangePassword" style="-fx-font-size: 16; -fx-font-weight: bold;" styleClass="button-green" stylesheets="@../themes/default.css" text="Done" HBox.hgrow="ALWAYS">
         <padding>
            <Insets left="100.0" right="100.0" />
         </padding></Button>
    </HBox>
</VBox>
