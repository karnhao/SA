<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controller.AddMusicianController">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <Label style="-fx-font-size: 36; -fx-font-weight: bold;" text="Musician List" textFill="#006664">
               <padding>
                  <Insets left="10.0" />
               </padding></Label>
            <Pane HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchMusicianField" promptText="Search by name." style="-fx-background-radius: 20;">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="17.0" />
               </HBox.margin></TextField>
            <Button alignment="TOP_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onSearchMusician" styleClass="button-green" stylesheets="@../themes/default.css" text="Search" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="10.0" top="17.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="MusicianListTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="roleCollumn" prefWidth="75.0" text="Role" />
                  <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="emailColumn" prefWidth="75.0" text="Email" />
                  <TableColumn fx:id="phoneNumberColumn" prefWidth="75.0" text="Phone Number" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TableView>
         </children>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#addMusicianToRequirement" style="-fx-font-size: 16; -fx-font-weight: Bold;" styleClass="button-green" stylesheets="@../themes/default.css" text="Add" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#backToEventRequirement" style="-fx-font-size: 16; -fx-font-weight: bold;" styleClass="button-green" stylesheets="@../themes/default.css" text="Back" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </children>
</VBox>
