<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@../themes/default.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controller.ForgotPasswordController">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #006664;" styleClass="button-link" stylesheets="@../themes/default.css" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Forgot your password ?" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
               <padding>
                  <Insets left="10.0" right="10.0" top="40.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <ImageView fitHeight="150.0" fitWidth="200.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </ImageView>
         </children></VBox>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="450.0" prefWidth="395.0" stylesheets="@../themes/default.css" HBox.hgrow="ALWAYS">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin></ImageView>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <Label text="Email Address">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField promptText="Enter email address here..." styleClass="my-text-field" />
                  <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="5.0" style="-fx-background-color: #006664;" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </padding></VBox>
            <Button mnemonicParsing="false" onAction="#onResetPassword" prefHeight="39.0" prefWidth="200.0" styleClass="button-green" text="Reset Password">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onBackToLoginPage" styleClass="button-link" text="Back to Login page" textFill="RED">
               <font>
                  <Font size="16.0" />
               </font></Button>
         </children></VBox>
   </children>
</HBox>
